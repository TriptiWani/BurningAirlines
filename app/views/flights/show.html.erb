<h3>Flights</h3>
</br>

<p id="notice"><%= notice %></p>

<table style="width:60%" id="flightsdisplay">

      <tr>
        <th><strong>Number</strong></th>
        <th><strong>Origin</strong></th>
        <th><strong>Destination</strong></th>
        <th><strong>Date</strong></th>
        <th><strong>Plane</strong></th>
      </tr>
    <tr>
    <td>  <%= @flight.number %> </td>
    <td>   <%= @flight.origin %> </td>
    <td>   <%= @flight.destination %> </td>
    <td>   <%= @flight.date %></td>

    <td>
    <%= form_for @flight do |f| %>
      <fieldset>
        <%= f.select :airplane_id, Airplane.pluck(:name, :id), :include_blank => true %>
      </fieldset>
    <% end %>
  </td>
    </tr>

    <%= link_to 'Edit', edit_flight_path(@flight) %> |
    <%= link_to 'Back', flights_path %>

</table>
